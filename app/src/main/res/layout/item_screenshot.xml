<?xml version="1.0" encoding="utf-8"?>
<com.way.capture.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:foreground="?selectableItemBackground"
                                     app:cardElevation="0.5dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:scaleType="centerInside"/>

    <View
        android:id="@+id/lay_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_80"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cb_selected"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        android:layout_gravity="top|right"
        android:layout_margin="4dp"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tweet_select_picture_selected"/>

    <ImageView
        android:id="@+id/iv_is_gif"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_gallery_play"
        android:visibility="gone"/>

</com.way.capture.widget.SquareLayout>