<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/long_screenshot_indicator_root"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:gravity="center">

    <com.way.capture.widget.ArrowView
        android:id="@+id/long_screenshot_indicator_av"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/long_screenshot_indicator_tv"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:background="@color/overlay"
        android:gravity="start"
        android:layout_marginStart="8dp"
        android:text="@string/long_screenshot_indicator_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>