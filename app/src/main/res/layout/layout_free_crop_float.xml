<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.way.capture.widget.freecrop.FreeCropView
        android:id="@+id/free_crop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/free_crop_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@android:string/ok"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/free_crop_toast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_touch_app_white"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowRadius="2"
            android:text="@string/free_crop_toast"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />
    </FrameLayout>


</FrameLayout>
