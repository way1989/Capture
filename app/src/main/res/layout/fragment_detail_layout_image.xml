<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.way.capture.widget.subscaleview.SubsamplingScaleImageView
        android:id="@+id/detail_image_height_quality"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/height_quality_btn"
        android:background="@drawable/btn_default_material"
        android:textColor="@android:color/white"
        android:shadowRadius="3"
        android:shadowColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/heigh_quality"
        android:visibility="gone" />
</FrameLayout>
